  "global_settings": {
    "platform": "espressif32@6.4.0",
    "framework": "arduino",
    "monitor_speed": 115200,
    "upload_speed": 460800
  },
  "build_profiles": {
    "development": {
      "description": "Development build with debug features",
      "flags": [
        "-D CORE_DEBUG_LEVEL=5",
        "-D DEBUG_ESP_PORT=Serial"
      ]
    },
    "release": {
      "description": "Optimized release build",
      "flags": [
        "-Os",
        "-D NDEBUG",
        "-D RELEASE_BUILD"
      ]
    },
    "minimal": {
      "description": "Minimal build size",
      "flags": [
        "-Os",
        "-D WLED_DISABLE_HUESYNC",
        "-D WLED_DISABLE_INFRARED",
        "-D WLED_MAX_USERMODS=0"
      ]
    }
  },
  "hardware_configs": {
    "30_leds": {
      "led_count": 30,
      "max_current": 2000,
      "default_brightness": 128
    },
    "60_leds": {
      "led_count": 60,
      "max_current": 3000,
      "default_brightness": 128
    },
    "150_leds": {
      "led_count": 150,
      "max_current": 6000,
      "default_brightness": 128
    },
    "300_leds": {
      "led_count": 300,
      "max_current": 12000,
      "default_brightness": 100,
      "power_injection": true
    }
  },
  "led_types": {
    "ws2812b": {
      "name": "WS2812B",
      "voltage": "5V",
      "data_rate": "800kHz",
      "color_order": "GRB"
    },
    "sk6812": {
      "name": "SK6812",
      "voltage": "5V",
      "data_rate": "800kHz",
      "color_order": "GRB"
    },
    "ws2813": {
      "name": "WS2813",
      "voltage": "5V",
      "data_rate": "800kHz",
      "color_order": "GRB",
      "features": ["backup_data_line"]
    },
    "apa102": {
      "name": "APA102",
      "voltage": "5V",
      "data_rate": "variable",
      "color_order": "BGR",
      "features": ["clock_line", "high_refresh"]
    }
  },
